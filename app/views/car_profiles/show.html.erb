<div class="container-fluid regular-background">
    <div class="row">
        <div class="col-md-12">
            <h2>Car Profile: <%= @car_profile.name %>-<%=@car_profile.to_s %> Engine Code: <%= @car_profile.engine_code %></h2>
            <%= will_paginate @maintenance_actions, class: 'pagination pagination-sm' %>
                    <!-- Table -->
                    <!--table class="table table-bordered table-condensed table-striped" id="table-pagination" data-url="data2.json" data-height="400" data-pagination="true" data-search="true"-->
                    <table class="table table-bordered table-condensed table-striped">

                        <thead>
                        <tr>
                            <th>Mileage</th>
                            <th>Interval Month</th>
                            <th>Action</th>
                            <th>Item</th>
                            <th>Item Description</th>
                            <th>Labor Units</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% @maintenance_actions.each do |maction|%>
                        <tr>
                            <td><%= maction.interval_mileage%></td>
                            <td><%= maction.interval_month%></td>
                            <td><%= maction.action%></td>
                            <td><%= maction.item%></td>
                            <td><%= maction.item_description%></td>
                            <td><%= maction.labor_units%></td>
                        </tr>
                        <% end %>
                        </tbody>
                    </table>



        </div>
    </div>
    <div class="row">
        <div class="col-md-12"><%= link_to 'Edit', edit_car_profile_path(@car_profile) %> |
            <%= link_to 'Back', user_path(current_user) %>
        </div>
    </div>
</div>

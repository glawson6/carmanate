<div class="container-fluid regular-background">
    <div class="row">
        <div class="col-md-12 remove-padding">
            <div class="panel panel-default">
                <div class="panel-heading text-center"><h1>Maintenance Report</h1></div>
                <div class="panel-body">
                    <h2>Car Profile: <%= @car_profile.name %></h2>
                    <h4><%=@car_profile.year_make_model %></h4>
                    <h4> Engine Type : <%= @car_profile.engine_code %></h4>
                    <%= will_paginate @maintenance_actions, class: 'pagination pagination-sm' %>
                    <table class="table table-bordered table-condensed table-striped">
                        <thead>
                        <tr>
                            <th>Mileage</th>
                            <th>Interval Month</th>
                            <th>Action</th>
                            <th>Item</th>
                            <th>Item Description</th>
                            <th>Labor Units</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% @maintenance_actions.each do |maction|%>
                            <tr>
                                <td><%= maction.interval_mileage%></td>
                                <td><%= maction.interval_month%></td>
                                <td><%= maction.action%></td>
                                <td><%= maction.item%></td>
                                <td><%= maction.item_description%></td>
                                <td><%= maction.labor_units%></td>
                            </tr>
                        <% end %>
                        </tbody>
                    </table>
                </div>
                <div class="panel-footer">
                    <%= link_to 'Edit', edit_car_profile_path(@car_profile) %> |
                    <%= link_to 'Back', user_path(current_user) %>
                </div>
            </div>
        </div>
    </div>
</div>
